{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CLI with UV and DDTrace",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "dotenv",
                "--",
                "run",
                "ddtrace-run",
                "python",
                "cli_main.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Install UV Dependencies",
            "type": "shell",
            "command": "uv",
            "args": ["sync"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
